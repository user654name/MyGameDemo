    <update id="updateByPrimaryKeySelective" parameterType="com.buywhat.demo.bean.User">
        update usertable
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="headUrl != null">
                head_url = #{headUrl,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>


    <select id="selectByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from usertable
        where name = #{name}
        limit 1
    </select>


    <resultMap id="BaseResultMap" type="com.buywhat.demo.bean.User">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="head_url" jdbcType="VARCHAR" property="headUrl"/>
    </resultMap>
    <sql id="Base_Column_List">
      id, `name`, password, head_url
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from usertable
        where id = #{id,jdbcType=INTEGER}
    </select>


    <insert id="insert" parameterType="com.buywhat.demo.bean.User">
    insert into usertable (id, name, password,
    head_url)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
    #{headUrl,jdbcType=VARCHAR})
  </insert>


